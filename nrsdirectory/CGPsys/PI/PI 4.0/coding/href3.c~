#include <stdio.h>

#define MAX_LEN 320

//int main (int argc, char *argv[]) {
int main () {
	char a_word[MAX_LEN];
	char a_link[MAX_LEN];

	printf ("Digite o nome: ");
	scanf ("%s", a_word);

	printf ("Cole o link: ");
	scanf ("%s", a_link);

	printf("Your word and link:");
	printf("<a href=\"%s\">%s</a> \n", a_link, a_word);

	return 0;
}
